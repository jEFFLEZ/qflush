{
  "name": "qflash",
  "displayName": "QFlash Extension",
  "publisher": "funesterie",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.9.5",
    "vsce": "^2.10.0"
  },
  "description": "Visualize NPZ engine scores and manage lanes from VS Code.",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jEFFLEZ/qflash.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onCommand:qflash.openPanel"
  ],
  "contributes": {
    "commands": [
      {
        "command": "qflash.openPanel",
        "title": "QFlash: Open Panel"
      },
      {
        "command": "qflash.showLicenseStatus",
        "title": "QFlash: Show License Status"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QFlash",
      "properties": {
        "qflash.daemonUrl": {
          "type": "string",
          "default": "http://localhost:4500",
          "description": "URL of the NPZ daemon (including protocol and port)"
        },
        "qflash.adminToken": {
          "type": "string",
          "default": "changeme",
          "description": "Admin token to call NPZ admin endpoints"
        }
      }
    }
  }
}
