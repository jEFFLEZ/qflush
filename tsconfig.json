{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@rome/*": ["src/rome/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["node", "vitest", "mocha", "jest"]
  },
  "include": [
    "src/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}